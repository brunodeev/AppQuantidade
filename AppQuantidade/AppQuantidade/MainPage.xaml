<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label Text="1" FontSize="50" TextColor="#f099" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Text="+" FontSize="40" BorderWidth="1" BorderColor="#707070" BackgroundColor="#fff" WidthRequest="70" HeightRequest="70"/>
            <Button Text="-" FontSize="40" BorderWidth="1" BorderColor="#707070" BackgroundColor="#fff" WidthRequest="70" HeightRequest="70"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
